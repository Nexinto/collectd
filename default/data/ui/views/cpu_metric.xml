<form script="custom_layout_width.js">
  <label>CPU Usage</label>
  <fieldset submitButton="false" autoRun="true">
    <input type="multiselect" searchWhenChanged="true" token="envmultiselect">
      <label>Select Environment:</label>
      <default>*</default>
      <populatingSearch fieldForLabel="envdata" fieldForValue="envdata">
<![CDATA[
| metadata type=hosts `collectd_index` | search totalCount>0 
| eval host=replace(host,"_",".") | eval fields=split(host,".") | eval stage=mvindex(fields,1)
| eval environment=mvindex(fields,2)
| eval env=tostring(environment + "_" + stage)
| eval envdata=tostring(stage + "." + environment)
| dedup env
| sort env 
| regex env="^[^\d]"
| table env envdata
]]>
	  </populatingSearch>
      <choice value="*">all</choice>
	  
	  <prefix>(</prefix>
      <valuePrefix>host ="*</valuePrefix>
      <valueSuffix>*"</valueSuffix>
      <delimiter> OR </delimiter>
      <suffix>)</suffix>
    </input>
	
    <input type="multiselect" searchWhenChanged="true" token="hostmultiselect">
      <label>Select Hosts: </label>
      <default>*</default>
      <populatingSearch fieldForLabel="hostreplace" fieldForValue="host">
<![CDATA[
	  | metadata type=hosts `collectd_index` |
	  search $envmultiselect$ totalCount>0 | 
	  dedup "host" | 
	  sort "host" | 
	  regex host="^[^\d]" |
	  eval hostreplace=replace(host,"_",".") | eval host=replace(host,"_",".") | 
	  table host hostreplace
]]>	  
	  </populatingSearch>
      <choice value="*">all</choice>
	  
	  <prefix>(</prefix>
      <valuePrefix>host ="</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter> OR </delimiter>
      <suffix>)</suffix>
    </input>
	
	<input type="dropdown" searchWhenChanged="true" token="object">
      <label>Select Object</label>
      <default>*</default>	   
	  <choice value="*">all Cores</choice>
      <populatingSearch fieldForLabel="object" fieldForValue="object">

<![CDATA[	  
	  `collectd_index`  $hostmultiselect$ $envmultiselect$  object=cpu-* | 
	  dedup "object" | 
	  sort "object" | 
	  table "object"
]]>
	  
	 </populatingSearch>
    </input>
    
	<input type="time" searchWhenChanged="true">
      <label>Select Time:</label>
      <default>
        <earliestTime>-24h@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
  </fieldset>
  
    <row>
    <panel id="panel1_setWidth_67">
      <chart>
        <title>CPU usage by host (% core$object$)</title>
        <searchString>
<![CDATA[
`collectd_index` metric="cpu-idle" $hostmultiselect$ $envmultiselect$  object="$object$" |
eval cpu-used=100-(value)   | 
bucket span=10m object | 

timechart bins=200 avg(cpu-used) by host
]]>
		</searchString>
        <earliestTime>$earliest$</earliestTime>
        <latestTime>$latest$</latestTime>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">collapsed</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.nullValueMode">connect</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">bottom</option>
        <option name="charting.axisTitleX.text">$metric$ by host over time</option>
      </chart>
    </panel>
    <panel id="panel1_setWidth_33">
      <table>
        <title>CPU used by host (% core$object$)</title>
        <searchString>
<![CDATA[
`collectd_index` metric="cpu-idle" $hostmultiselect$ $envmultiselect$  object="$object$" |
eval cpu-used=100-(value)   | 
bucket span=10m object | 
stats avg(cpu-used) as used max(cpu-used) as max by host |
sort -used | 
eval used=tostring(round(used,2)) |
eval used=tostring(used + "%") |
eval max=tostring(round(max,2)) |
eval max=tostring(max + "%") |

]]>
  </searchString>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="count">10</option>
